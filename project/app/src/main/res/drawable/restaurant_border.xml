<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Vibrant gradient background -->
    <item>

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#FFB76B"
                android:centerColor="#FFA647"
                android:endColor="#FF8C42"
                android:angle="270" />
        </shape>

    </item>

    <!-- Foreground card effect for readable content -->
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" />
            <corners android:radius="18dp" />
            <stroke
                android:width="1dp"
                android:color="#22FFFFFF" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

</layer-list>